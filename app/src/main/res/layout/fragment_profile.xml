            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_marginVertical="60dp"
            app:cardCornerRadius="15dp"

            app:cardElevation="15dp"
            app:cardUseCompatPadding="true">


            <LinearLayout
